<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints,UselessLeaf">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/C8dp"
            android:elevation="@dimen/C8dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/C12dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/sf_namelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/C5dp"
                    android:visibility="gone">


                    <TextView
                        android:id="@+id/SfName"
                        style="@style/TextStyleOne"
                        android:text="-"
                        android:textColor="@android:color/black"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/deviation_date"
                        style="@style/TextStyleOne"
                        android:layout_weight="1"
                        android:padding="@dimen/C7dp"
                        android:text="-"
                        android:textColor="@android:color/black"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/devitaion_status"
                        style="@style/TextStyleOne"
                        android:padding="@dimen/C8dp"
                        android:text="-"
                        android:textColor="@android:color/white" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_margin="@dimen/C5dp"
                    android:background="@android:color/black" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/C7dp">

                        <TextView
                            style="@style/TextStyleOne"
                            android:layout_weight="1"
                            android:text="Type"
                            android:textAllCaps="true"
                            android:textColor="@color/dark_greys"
                            android:textSize="11dp" />

                        <TextView
                            android:id="@+id/deviation_entry"
                            style="@style/TextStyleOne"
                            android:text="-"
                            android:textSize="11sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_actual"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/TextStyleOne"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="Actual Check-in Time"
                                android:textColor="@color/dark_greys" />

                            <TextView
                                android:id="@+id/workinghours"
                                style="@style/TextStyleOne"
                                android:textColor="@color/green" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/TextStyleOne"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="Early Check-in Time"
                                android:textColor="@color/dark_greys" />

                            <TextView
                                android:id="@+id/shiftdate"
                                style="@style/TextStyleOne"
                                android:textColor="@color/green" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_late"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/TextStyleOne"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="Actual Check-out Time"
                                android:textColor="@color/dark_greys" />

                            <TextView
                                android:id="@+id/lateactualout"
                                style="@style/TextStyleOne"
                                android:textColor="@color/green" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/TextStyleOne"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="Late Check-out Time"
                                android:textColor="@color/dark_greys" />

                            <TextView
                                android:id="@+id/latecheckout"
                                style="@style/TextStyleOne"
                                android:textColor="@color/green" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_daType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/TextStyleOne"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="From Type"
                                android:textColor="@color/dark_greys" />

                            <TextView
                                android:id="@+id/from_type"
                                style="@style/TextStyleOne"
                                android:textColor="@color/green" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/TextStyleOne"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="To Type"
                                android:textColor="@color/dark_greys" />

                            <TextView
                                android:id="@+id/to_type"
                                style="@style/TextStyleOne"
                                android:textColor="@color/green" />
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            style="@style/TextStyleOne"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:text="Amount"
                            android:textColor="@color/dark_greys" />

                        <TextView
                            android:id="@+id/amnt_txt"
                            style="@style/TextStyleOne"
                            android:textColor="@color/green" />


                    </LinearLayout>


                    <TextView
                        style="@style/TextStyleOne"
                        android:layout_marginTop="@dimen/C10dp"
                        android:text="Reason"
                        android:textAllCaps="true"
                        android:textColor="@color/dark_greys"
                        android:textSize="11dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/deviation_reason"
                        style="@style/TextStyleOne"
                        android:text="-"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="gone" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/C8dp">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                style="@style/TextStyleOne"
                                android:text="Applied :"
                                android:textColor="@color/dark_greys"
                                android:textSize="13dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/deviation_applied"
                                style="@style/TextStyleOne"
                                android:layout_marginLeft="@dimen/C5dp"
                                android:text="-"
                                android:textColor="@color/dark_greys"
                                android:textSize="13dp"
                                android:textStyle="bold" />


                            />
                        </LinearLayout>




                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right">

                            <TextView
                                android:id="@+id/deviation_rejected"
                                style="@style/TextStyleOne"
                                android:textColor="@color/dark_greys"
                                android:textSize="13dp"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ivExp"
                            android:layout_width="@dimen/C30dp"
                            android:layout_height="@dimen/C30dp"
                            android:layout_gravity="end"
                            android:layout_marginLeft="@dimen/C5dp"
                            android:src="@drawable/ic_launcher_background"></ImageView>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>