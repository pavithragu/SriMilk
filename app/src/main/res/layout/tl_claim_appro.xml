<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_travel_loaction"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/C8dp"
    app:cardCornerRadius="@dimen/C5dp"
    tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/hash_border"
        android:orientation="vertical">


        <EditText
            android:id="@+id/ta_edt_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter From"
            android:enabled="false"
            android:padding="@dimen/C10dp"
            android:textColorHint="#C0C0C0"
            android:textSize="@dimen/C16dp" />

        <EditText
            android:enabled="false"
            android:id="@+id/ta_edt_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter To"
            android:padding="@dimen/C10dp"
            android:textColorHint="#C0C0C0"
            android:textSize="@dimen/C14dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>