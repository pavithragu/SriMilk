<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/statusLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/C5dp">

    <LinearLayout
        android:id="@+id/detailsLay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/C40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tpApprovalDate"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="11sp"
            android:text="01.06.2022"/>
        <!--<TextView
            android:id="@+id/tpApprovalName"
            android:layout_width="@dimen/C40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="11sp"
            android:text="Kumar"/>-->
        <TextView
            android:id="@+id/tpApprovalWorkType"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="11sp"
            android:text="wr"/>
        <TextView
            android:id="@+id/tpApprovalRemarks"
            android:layout_width="@dimen/C40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Salem CC"
            android:textSize="11sp"/>
        <TextView
            android:id="@+id/tpApprovalMonth"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="11sp"
            android:text="January"/>
        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">
            <TextView
                android:id="@+id/approve"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/C5dp"
                android:background="@drawable/button_dgreen"
                android:padding="@dimen/C3dp"
                android:text="Approve"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:textStyle="bold"
                android:textSize="11sp"
                android:textAlignment="center"
                android:visibility="visible"
                android:textColor="@color/color_white" />
            <Button
                android:id="@+id/reject"
                android:layout_width="18dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:background="@drawable/button_amber"
                android:padding="@dimen/C3dp"
                android:text="Reject"
                android:textStyle="bold"
                android:textSize="11sp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:textAlignment="center"
                android:visibility="visible"
                android:textColor="@color/color_white" />
        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/C1dp"
        android:background="@color/grey_200"/>



</LinearLayout>