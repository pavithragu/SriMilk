<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/row_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        tools:ignore="MissingConstraints">


        <LinearLayout
            android:layout_width="@dimen/header_date_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">


            <TextView
                android:id="@+id/txt_name"
                android:layout_width="@dimen/header_date_width"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sno"
                android:text="Name"
                ></TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/header_date_width1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_qty"
                android:layout_width="@dimen/header_date_width1"
                android:layout_height="wrap_content"
                android:text="Qty"></TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="@dimen/header_date_width1"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/txt_rate"
                android:layout_width="@dimen/header_date_width1"
                android:layout_height="wrap_content"
                android:text="Price"></TextView>

        </LinearLayout>

        <LinearLayout

            android:layout_width="@dimen/header_date_width1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_total"
                android:layout_width="@dimen/header_date_width1"
                android:layout_height="wrap_content"

                android:text="Total"></TextView>
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>