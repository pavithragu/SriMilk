<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/layparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/C5dp"
        android:layout_marginRight="@dimen/C5dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/C5dp"
        android:paddingTop="@dimen/C5dp"
        android:paddingRight="@dimen/C5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:text="hkhhk"
                    android:id="@+id/tvDistName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/btnCallMob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView

                        android:id="@+id/icMob"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/call_icon"
                        app:tint="@color/colorPrimaryDark" />

                    <TextView
                       android:text="90866"
                        android:id="@+id/tvDistPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey_600"
                        android:textSize="@dimen/C12dp"
                        android:textStyle="bold">

                    </TextView>
                </LinearLayout>


                <TextView
                    android:text="hskkk"
                    android:id="@+id/tvDistAdd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:visibility="visible" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:visibility="visible">


                <RelativeLayout

                    android:id="@+id/rlRefBal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvCapACBal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/ivrefresh"
                        android:fontFamily="sans-serif"
                        android:text="Your AC Balance"
                        android:textSize="11sp" />

                    <ImageView
                        android:id="@+id/ivrefresh"
                        android:layout_width="@dimen/C15dp"
                        android:layout_height="@dimen/C15dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_baseline_refresh_24"
                        app:tint="@color/black" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvACBal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:padding="@dimen/C5dp"
                    android:text="0.00"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/C10dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvAvailBal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:text="Previous Order value:₹0.00"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/tvAmtBlk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:text="Amount Blocked:₹0.00"
                android:textAlignment="viewEnd"
                android:textSize="9sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/llRefreshLoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/C5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/C5dp"
            android:paddingRight="@dimen/C5dp"
            android:paddingBottom="@dimen/C5dp"
            android:visibility="visible">

            <ImageView
                android:layout_width="@dimen/C15dp"
                android:layout_height="@dimen/C15dp"
                android:src="@drawable/loca_icon" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/C2dp"
                android:paddingTop="2dp"
                android:paddingRight="@dimen/C10dp"
                android:text="Refresh Location"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvLocUpdTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif"
                android:gravity="end"
                android:textSize="9sp" />
        </LinearLayout>


        <TextView
            android:text="Lat:80.00747 Lng:80.8039208"
            android:id="@+id/tvLatLng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif"

            android:textSize="9sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/C15dp"
            android:layout_marginBottom="@dimen/C5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llDirection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/C15dp"
                    android:layout_height="@dimen/C15dp"
                    android:src="@drawable/ic_directions"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:id="@+id/showDirection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/C2dp"
                    android:paddingTop="2dp"
                    android:paddingRight="@dimen/C10dp"
                    android:text="Direction"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvBalUpdTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:gravity="end"
                android:textSize="9sp" />

        </LinearLayout>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_weight="1"
        android:background="@drawable/bottom_border">

    </RelativeLayout>

</RelativeLayout>