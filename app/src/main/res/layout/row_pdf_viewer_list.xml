<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/product_image"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/C5dp"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="@dimen/C10dp">


    <LinearLayout
        android:id="@+id/lin_pdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/C30dp"
            android:layout_weight="1"
            android:padding="@dimen/C7dp"
            android:src="@drawable/pdf">

        </ImageView>

        <TextView
            android:id="@+id/txt_pdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:text="Travel Annexure C-1"
            android:textColor="@android:color/black"></TextView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_pdf2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/C10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/C30dp"
            android:layout_weight="1"
            android:padding="@dimen/C7dp"
            android:src="@drawable/pdf">
        </ImageView>

        <TextView
            android:id="@+id/txt_pdf1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:text="HAP_ANNEXURE_C"
            android:textColor="@android:color/black"></TextView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin_pdf3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/C10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/C30dp"
            android:layout_weight="1"
            android:padding="@dimen/C7dp"
            android:src="@drawable/pdf">
        </ImageView>

        <TextView
            android:id="@+id/txt_pdf3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:text="GSTN Number List"
            android:textColor="@android:color/black"></TextView>

    </LinearLayout>

</LinearLayout>
