                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvPrimOrd"
                                    style="@style/mediumTextStyle"
                                    android:layout_weight="1"
                                    android:fontFamily="sans-serif"
                                    android:gravity="center"
                                    android:text="0"
                                    android:textAlignment="center"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Primary Order"
                                    android:textAlignment="center"
                                    android:textSize="9sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="@dimen/C2dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="6dp"
                                android:background="@color/grey_200" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvNoOrd"
                                    style="@style/mediumTextStyle"
                                    android:layout_weight="1"
                                    android:fontFamily="sans-serif"
                                    android:gravity="center"
                                    android:text="0"
                                    android:textAlignment="center"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="No Order"
                                    android:textAlignment="center"
                                    android:textSize="9sp" />
                            </LinearLayout>


                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvUpdTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/C5dp"
                            android:layout_marginRight="@dimen/C5dp"
                            android:fontFamily="sans-serif"
                            android:gravity="end"
                            android:text="Last Updated On : "
                            android:textColor="@color/grey_700"
                            android:textSize="8sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/C5dp"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/C10dp">

                    <include layout="@layout/fragment_salesdata_info"></include>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvSalesData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/C5dp"
                    android:visibility="visible"
                    app:cardCornerRadius="@dimen/C10dp">

                    <include layout="@layout/fragment_tabledata_info"></include>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvCalls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/C5dp"
                    app:cardCornerRadius="@dimen/C10dp">

                    <include layout="@layout/fragment_visitdata_info"></include>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </ScrollView>
        <LinearLayout
            android:id="@+id/linOffer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ablack"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                >

                <ImageView
                    android:id="@+id/btnCloseOffer"
                    android:layout_width="@dimen/C40dp"
                    android:layout_height="@dimen/C40dp"
                    android:layout_alignParentRight="true"
                    android:elevation="@dimen/C16dp"
                    android:src="@drawable/closebtn" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/crdOffer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/C16dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/ryclOffers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C8dp"
                            android:background="@color/white" />
                        <TextView
                            android:id="@+id/lblSlideNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1/2"
                            android:textAlignment="textEnd"
                            android:paddingEnd="@dimen/C8dp"
                            android:paddingBottom="@dimen/C8dp"
                            android:textSize="12sp"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
