<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints,UselessLeaf">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/C8dp"
            android:elevation="@dimen/C8dp"
            app:cardCornerRadius="10dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/SfName"
                    style="@style/TextStyleOne"
                    android:layout_weight="1"
                    android:padding="@dimen/C7dp"
                    android:text="3"
                    android:textColor="@android:color/black"
                    android:textSize="11sp"
                    android:textStyle="bold" />


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/ta_date"
                        style="@style/TextStyleOne"
                        android:layout_weight="1"
                        android:padding="@dimen/C7dp"
                        android:text="3"
                        android:textColor="@android:color/black"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ta_status"
                        style="@style/TextStyleOne"
                        android:layout_marginRight="@dimen/C5dp"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_margin="@dimen/C5dp"
                    android:background="@android:color/black" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/C5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextStyle"
                            android:layout_width="@dimen/header_width1"
                            android:layout_weight="3"
                            android:text="Daily Allowance "
                            android:textSize="@dimen/C12dp" />

                        <TextView
                            android:id="@+id/txt_da"
                            style="@style/TextStyle"
                            android:layout_width="@dimen/C100dp"
                            android:textAlignment="textEnd"
                            android:textSize="@dimen/C12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextStyle"
                            android:layout_width="@dimen/header_width1"
                            android:layout_weight="3"
                            android:text="Travel Location "
                            android:textSize="@dimen/C12dp" />

                        <TextView
                            android:id="@+id/txt_tvrl_amt"
                            style="@style/TextStyle"
                            android:layout_width="@dimen/C100dp"
                            android:textAlignment="textEnd"
                            android:textSize="@dimen/C12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextStyle"
                            android:layout_width="@dimen/header_width1"
                            android:layout_weight="3"
                            android:text="Fuel Allowance"
                            android:textSize="@dimen/C12dp" />

                        <TextView
                            android:id="@+id/txt_tl"
                            style="@style/TextStyle"
                            android:layout_width="@dimen/C100dp"
                            android:textAlignment="textEnd"
                            android:textSize="@dimen/C12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextStyle"
                            android:layout_width="@dimen/header_width1"
                            android:layout_weight="3"
                            android:text="Lodging Allowance"
                            android:textSize="@dimen/C12dp" />

                        <TextView
                            android:id="@+id/txt_la"
                            style="@style/TextStyle"
                            android:layout_width="@dimen/C100dp"
                            android:textAlignment="textEnd"
                            android:textSize="@dimen/C12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextStyle"
                            android:layout_width="@dimen/header_width1"
                            android:layout_weight="3"
                            android:text="Local Conveyance"
                            android:textSize="@dimen/C12dp" />

                        <TextView
                            android:id="@+id/txt_lc"
                            style="@style/TextStyle"
                            android:layout_width="@dimen/C100dp"
                            android:textAlignment="textEnd"
                            android:textSize="@dimen/C12dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextStyle"
                            android:layout_width="@dimen/header_width1"
                            android:layout_weight="3"
                            android:text="Other Expense"
                            android:textSize="@dimen/C12dp" />

                        <TextView
                            android:id="@+id/txt_oe"
                            style="@style/TextStyle"
                            android:layout_width="@dimen/C100dp"
                            android:textAlignment="textEnd"
                            android:textSize="@dimen/C12dp" />
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_margin="@dimen/C5dp"
                        android:background="@android:color/black" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextStyle"
                            android:layout_width="@dimen/header_width1"
                            android:layout_weight="3"
                            android:text="Total"
                            android:textSize="@dimen/C12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/ta_amount"
                            style="@style/TextStyle"
                            android:layout_width="@dimen/C100dp"
                            android:textAlignment="textEnd"
                            android:textSize="@dimen/C12dp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <Button
                        android:id="@+id/btn_cancel"
                        android:layout_width="80dp"
                        android:layout_height="28dp"
                        android:layout_gravity="right"
                        android:background="@drawable/button_blueg"
                        android:elevation="@dimen/C5dp"
                        android:padding="1dp"
                        android:text="Cancel"
                        android:textColor="@color/white"
                        android:textFontWeight="900"
                        android:textSize="12sp"
                        android:visibility="gone" />

                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>