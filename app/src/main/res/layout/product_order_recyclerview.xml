<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/C5dp"
        app:cardCornerRadius="@dimen/C5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/C1dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/ivAddShoppingCart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_weight="3"
                    android:scaleType="centerInside"
                    android:src="@drawable/product_logo">

                </ImageView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/productname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="thirumalai"
                        android:textColor="@color/black"
                        android:textSize="@dimen/C13dp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:inputType="number"
                                android:text="MRP"
                                android:textColor="@color/grey_800"
                                android:textSize="12sp"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/MrpRate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginLeft="@dimen/C10dp"
                                android:fontFamily="sans-serif"
                                android:gravity="center_vertical"
                                android:text=""
                                android:textColor="@color/txt_color_black"
                                android:textSize="@dimen/C15dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:gravity="end"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/C10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:text="Price"
                                android:textColor="@color/grey_800"
                                android:textSize="12sp"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/Rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="@dimen/C10dp"
                                android:fontFamily="sans-serif"
                                android:gravity="center_vertical"
                                android:text="₹0"
                                android:textColor="@color/txt_color_black"
                                android:textSize="@dimen/C15dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llRegular"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvRegularLabel"

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"

                            android:hint=""
                            android:inputType="number"
                            android:text="Regular  : "
                            android:textColor="@color/grey_800"
                            android:visibility="visible" />


                        <TextView
                            android:id="@+id/RegularQty"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/tvRegularLabel"
                            android:layout_weight="1"
                            android:gravity="center_vertical"

                            android:hint=""
                            android:inputType="number"
                            android:text="0"
                            android:textColor="@color/grey_800"
                            android:visibility="visible" />


                        <TextView

                            android:id="@+id/RegularAmt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/C10dp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif"
                            android:gravity="center_vertical"
                            android:hint=""
                            android:inputType="number"
                            android:text="₹0"
                            android:textAlignment="textEnd"
                            android:textColor="@color/txt_color_black"
                            android:textStyle="bold"
                            android:visibility="visible" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/C30dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/rlUOM"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp"
                            android:background="@drawable/order_qty_backround"
                            android:visibility="visible">


                            <TextView
                                android:id="@+id/tvUOM"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:gravity="center_vertical"
                                android:hint="UOM"
                                android:paddingLeft="@dimen/C5dp"
                                android:paddingRight="@dimen/C5dp"
                                android:text=""
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                tools:ignore="RtlCompat" />

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="25dp"
                                android:layout_toRightOf="@id/tvUOM"
                                android:padding="@dimen/C1dp"
                                android:src="@drawable/spin_down_arrow" />
                        </LinearLayout>


                        <TextView
                            android:id="@+id/lblAddQty"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/C5dp"
                            android:layout_toLeftOf="@+id/Qty"
                            android:gravity="center_vertical"
                            android:text="Order Qty : "
                            android:textColor="@color/grey_800" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/order_qty_backround">

                            <ImageView
                                android:id="@+id/ivQtyMns"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:padding="6dp"
                                android:src="@drawable/disable_minus"
                                app:tint="@color/color_red" />

                            <EditText
                                android:id="@+id/Qty"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:background="@color/white"
                                android:gravity="center_vertical"
                                android:hint="0"
                                android:inputType="number"
                                android:maxLength="4"
                                android:paddingLeft="@dimen/C5dp"
                                android:paddingRight="@dimen/C5dp"
                                android:text=""
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/C13dp"
                                tools:ignore="RtlCompat" />

                            <ImageView
                                android:id="@+id/ivQtyPls"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:padding="6dp"
                                android:src="@drawable/plus"
                                app:tint="@color/green" />
                        </LinearLayout>


                        <RelativeLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/qtyAmt"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"

                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/C10dp"
                                android:fontFamily="sans-serif"
                                android:gravity="center_vertical"
                                android:hint=""
                                android:inputType="number"
                                android:text="₹0"
                                android:textColor="@color/txt_color_black"
                                android:textStyle="bold"
                                android:visibility="visible" />
                        </RelativeLayout>

                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginRight="@dimen/C10dp"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView

                            android:id="@+id/tvFreeLabel"

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="Free : "
                            android:textColor="@color/grey_800"
                            android:visibility="visible" />


                        <TextView

                            android:id="@+id/Free"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/tvFreeLabel"
                            android:gravity="center_vertical"

                            android:hint=""
                            android:inputType="number"
                            android:text="0"
                            android:textColor="@color/green"
                            android:textStyle="bold"
                            android:visibility="visible" />


                        <TextView
                            android:id="@+id/tvDiscountLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:layout_toLeftOf="@+id/Disc"
                            android:gravity="center_vertical"
                            android:text="Discount : "
                            android:textColor="@color/grey_800"
                            android:visibility="gone" />


                        <TextView
                            android:id="@+id/Disc"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="sans-serif"
                            android:gravity="center_vertical"
                            android:hint=""

                            android:inputType="number"
                            android:text="₹0"
                            android:textColor="@color/color_red"
                            android:textStyle="bold"
                            android:visibility="gone" />


                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="sans-serif"
                            android:gravity="center_vertical"
                            android:hint=""
                            android:inputType="number"
                            android:text="TAX  "
                            android:textColor="@color/grey_800"
                            android:visibility="visible" />


                        <TextView

                            android:id="@+id/tax"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/tvTaxLabel"
                            android:fontFamily="sans-serif"
                            android:gravity="center_vertical"

                            android:hint=""
                            android:inputType="number"
                            android:text=""
                            android:textColor="@color/grey_800"
                            android:visibility="visible" />


                        <TextView
                            android:id="@+id/tvTaxTotAmt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/C10dp"
                            android:fontFamily="sans-serif"
                            android:gravity="center_vertical"
                            android:hint=""
                            android:inputType="number"
                            android:text="₹0"
                            android:textColor="@color/txt_color_black"
                            android:textStyle="bold"
                            android:visibility="visible" />


                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/C3dp"
                        android:layout_marginTop="@dimen/C5dp"
                        android:layout_marginRight="@dimen/C3dp"
                        android:layout_weight="1"
                        android:background="@color/grey_100">

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/totalqty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/C3dp"
                            android:gravity="center_vertical"
                            android:inputType="number"
                            android:text="Total Qty : 0"
                            android:textColor="@color/txt_color_black"
                            android:visibility="visible" />


                        <TextView
                            android:id="@+id/Amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/C10dp"
                            android:fontFamily="sans-serif"
                            android:gravity="center_vertical"
                            android:text="₹0"
                            android:textColor="@color/txt_color_black"
                            android:textSize="@dimen/C15dp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/lnlblRwEntry"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/status"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Regular"
                            android:textColor="@color/black"
                            android:visibility="visible" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Additional"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Amount"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnRwEntry"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/C3dp"
                            android:layout_weight="1"
                            android:background="@drawable/order_qty_backround"
                            android:gravity="center"
                            android:hint=""
                            android:inputType="number"
                            android:maxLength="4"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:visibility="visible" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/C3dp"
                            android:layout_weight="1"
                            android:background="@drawable/order_qty_backround"
                            android:gravity="center"
                            android:hint="0"
                            android:inputType="number"
                            android:maxLength="4"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/C3dp"
                            android:layout_weight="1"
                            android:background="@drawable/order_amount_back"
                            android:gravity="center"
                            android:text="0.00"
                            android:textColor="@color/greenColor"
                            android:textSize="@dimen/C14dp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/C5dp"
                        android:orientation="horizontal"
                        android:weightSum="3">


                        <TextView
                            android:id="@+id/tvPreOrderVal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Previous Order value : 10"
                            android:textColor="@color/black"
                            android:visibility="gone" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/productqty"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/sno1"
                            android:gravity="end"
                            android:text="54"
                            android:textColor="@color/black"
                            android:textSize="@dimen/C13dp"></TextView>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=" 0"
                            android:textColor="@color/txt_color_black"
                            android:textSize="@dimen/C14dp"
                            android:textStyle="bold" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=" 0"
                            android:textColor="@color/txt_color_black"
                            android:textSize="@dimen/C14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="20"
                            android:textColor="@color/txt_color_black"
                            android:textSize="@dimen/C14dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>