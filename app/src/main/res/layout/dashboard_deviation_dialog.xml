<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">




        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textAlignment="center"
                android:id="@+id/tvNwJoin"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/C5dp"
                android:layout_marginTop="@dimen/C10dp"
                android:padding="@dimen/C8dp"
                android:text="New Join"
                android:textColor="@color/black"
                android:visibility="visible" />

            <TextView
                android:textAlignment="center"
                android:id="@+id/tvOthers"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/C5dp"
                android:layout_marginTop="@dimen/C10dp"
                android:padding="@dimen/C8dp"
                android:text="OTHERS"
                android:textColor="@color/black"
                android:visibility="visible" />


            <TextView
                android:textAlignment="center"
                android:id="@+id/tvWeekOff"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginStart="@dimen/C5dp"
                android:layout_marginTop="@dimen/C5dp"
                android:layout_marginEnd="@dimen/C5dp"
                android:layout_marginBottom="@dimen/C5dp"
                android:padding="@dimen/C8dp"
                android:text="WEEKOFF"
                android:textColor="@color/black" />

            <TextView
                android:textAlignment="center"
                android:id="@+id/tvDeviation"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginStart="@dimen/C5dp"
                android:layout_marginTop="@dimen/C5dp"
                android:layout_marginEnd="@dimen/C5dp"
                android:layout_marginBottom="@dimen/C5dp"
                android:padding="@dimen/C8dp"
                android:text="DEVIATION"
                android:textColor="@color/black" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>