<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grid_view_items"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/gridcolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/C3dp">

        <CheckBox
            android:id="@+id/cbCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tvCategoryType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:text="Demo"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/text_bg_grey"
            android:gravity="center_vertical"
            android:hint="Category"
            android:padding="@dimen/C5dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvSubCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/C5dp"
            android:layout_weight="1"
            android:background="@drawable/text_bg_grey"
            android:gravity="center_vertical"
            android:hint="Sub Category"
            android:padding="@dimen/C5dp"
            android:textColor="@color/black" />


    </LinearLayout>

</RelativeLayout>