<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grid_view_items"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/C5dp"

    android:paddingTop="@dimen/C5dp"
    android:paddingRight="@dimen/C3dp"
    android:paddingBottom="@dimen/C7dp">

    <LinearLayout
        android:id="@+id/llTeamType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/cardbutton"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/C10dp"
        android:paddingEnd="@dimen/C10dp">



        <TextView
            android:id="@+id/tvCategoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="SDM"
            android:textAlignment="center"
            android:textColor="@color/grey_800"
            android:textSize="@dimen/C14dp" />


    </LinearLayout>


</RelativeLayout>