<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="4">

    <ImageView
        android:id="@+id/img_preview"
        android:layout_width="@dimen/C70dp"
        android:layout_height="@dimen/C70dp"
        android:padding="@dimen/C5dp"
        android:src="@drawable/image_preview" />


    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="@dimen/C20dp"
        android:layout_height="@dimen/C20dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="-10dp"
        android:src="@drawable/delete_cart"
       ></ImageView>

</LinearLayout>
