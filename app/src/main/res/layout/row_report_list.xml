<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <LinearLayout
        android:id="@+id/row_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:layout_width="@dimen/header_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">


            <TextView
                android:id="@+id/txt_serial"
                android:layout_width="@dimen/header_width"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/sno"
                android:gravity="left"
                android:text="Sno"></TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/header_width1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_order"
                android:layout_width="@dimen/header_width1"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/sno"

                android:gravity="left"
                android:text="OrderID"></TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="@dimen/header_width2"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/txt_date"
                android:layout_width="@dimen/header_width1"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:text="OrderDate"></TextView>

        </LinearLayout>

        <LinearLayout

            android:layout_width="@dimen/header_width"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sno1"
                android:text="Value"></TextView>
        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>