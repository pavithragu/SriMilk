<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Hap.ERT">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/C10dp"
            android:orientation="horizontal">

            <TextView
                style="@style/TextStyle"
                android:layout_weight="1"
                android:text="ERT" />


            <ImageView
                android:id="@+id/close_ert"
                android:layout_width="@dimen/C30dp"
                android:layout_height="@dimen/C30dp"
                android:src="@drawable/ert_colse" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recylerview_ert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/C10dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>