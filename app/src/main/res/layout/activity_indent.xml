<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SFA_Activity.Order_Category_Select">

    <LinearLayout
        android:id="@+id/db1_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/sfatoolbar"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_bg"
            android:orientation="horizontal"
            android:padding="@dimen/C3dp">

            <TextView
                android:id="@+id/headtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/basic"
                android:paddingLeft="@dimen/C5dp"
                android:text="Indent"
                android:textAlignment="textStart"
                android:textAllCaps="true"
                android:textColor="#FFF"
                android:textSize="18dp"

                android:textStyle="bold" />

        </LinearLayout>


        <include
            android:id="@+id/orderTypesLayout"
            layout="@layout/procuct_category_types"
            android:visibility="gone"></include>


        <LinearLayout
            android:id="@+id/more_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/C5dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/outlet_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Retailor"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                    android:visibility="gone"
                    android:id="@+id/btnRepeat"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/C30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/C10dp"
                    android:background="@drawable/bottom_button"
                    android:letterSpacing="0.09"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="Repeat Indent"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:theme="@style/BluePrimaryButton"
                    app:finalCornerAngle="50dp"
                    app:initialCornerAngle="10dp"
                    app:spinning_bar_color="#FFFFFFFF"
                    app:spinning_bar_padding="5dp"
                    app:spinning_bar_width="5dp"
                    tools:ignore="RtlCompat" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnCallMob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:orientation="horizontal">


                <ImageView

                    android:id="@+id/icMob"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/call_icon"
                    app:tint="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/retailePhoneNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey_600"
                    android:textSize="@dimen/C12dp"
                    android:textStyle="bold">

                </TextView>
            </LinearLayout>


            <TextView
                android:id="@+id/retaileAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:text=""
                android:textColor="@color/grey_600"
                android:textSize="@dimen/C12dp"
                android:textStyle="italic">

            </TextView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lin_gridcategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lin_gridtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/PGroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

                </androidx.recyclerview.widget.RecyclerView>

                <LinearLayout
                    android:layout_width="@dimen/C2dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/C5dp"
                    android:background="@color/grey_500"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/PBrnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/C10dp"
                android:layout_marginTop="@dimen/C5dp"
                android:layout_marginRight="@dimen/C10dp"
                android:layout_marginBottom="@dimen/C5dp"
                android:background="@color/grey_300" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/C10dp"
            android:layout_weight="1"
            android:padding="@dimen/C8dp"
            app:cardCornerRadius="@dimen/C5dp">

            <LinearLayout

                android:id="@+id/lin_orderrecyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <RelativeLayout
                    android:id="@+id/rlSearchParent"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/button_white"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/Category_Nametext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableRight="@drawable/ic_search_icon"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/C10dp"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:visibility="visible" />


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rlCategoryItemSearch"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/C45dp"
                    android:background="@drawable/button_white"
                    android:visibility="gone">

                    <EditText

                        android:id="@+id/searchView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/ic_search_icon"
                        android:hint="Search here"
                        android:paddingLeft="@dimen/C5dp"
                        android:singleLine="true"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorPrimaryDark"
                        android:textColorHint="@color/grey_500"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        android:visibility="visible" />


                    <ImageView
                        android:id="@+id/ivClose"
                        android:layout_width="@dimen/C30dp"
                        android:layout_height="@dimen/C30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/C5dp"
                        android:src="@drawable/ic_baseline_close_24"></ImageView>
                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/llBillHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/rlAddProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_margin="@dimen/C5dp"
                        android:background="@drawable/button_blueg"
                        android:gravity="center_vertical"
                        android:padding="@dimen/C5dp"
                        android:visibility="visible">


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Product"
                            android:textColor="@color/white"
                            android:textSize="@dimen/C13dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/C5dp"
                            android:src="@drawable/ic_round_add_circle_24"
                            app:tint="@color/white" />


                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"

                        android:layout_marginLeft="@dimen/C5dp"
                        android:layout_marginRight="@dimen/C5dp"
                        android:background="@color/black"
                        android:outlineAmbientShadowColor="@color/statuscolor"></View>


                    <LinearLayout
                        android:id="@+id/row_report"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:padding="@dimen/C5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="@dimen/header_width1"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/itemstextview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:gravity="left"
                                    android:text="SKU"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/C12dp"
                                    android:textStyle="bold"></TextView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:visibility="gone">

                                    <TextView
                                        android:id="@+id/FreeQty"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginRight="@dimen/C3dp"
                                        android:gravity="end"
                                        android:text="Free"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/C12dp"
                                        android:textStyle="bold"></TextView>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">

                                    <TextView
                                        android:id="@+id/Rate"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="Rate"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/C12dp"
                                        android:textStyle="bold"></TextView>
                                </LinearLayout>


                                <LinearLayout
                                    android:visibility="gone"
                                    android:id="@+id/llRegular"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">

                                    <TextView
                                        android:id="@+id/RegularQty"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:gravity="end"
                                        android:text="Regular"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/C12dp"
                                        android:textStyle="bold"></TextView>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:gravity="end"
                                        android:text="UOM"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/C12dp"
                                        android:textStyle="bold"></TextView>
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="@dimen/C100dp"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/orderqty"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="Qty"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/C12dp"
                                        android:textStyle="bold"></TextView>
                                </LinearLayout>

                                <ImageView
                                    android:visibility="invisible"
                                    android:id="@+id/ivDel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/C5dp"
                                    android:padding="@dimen/C5dp"
                                    android:src="@drawable/delete_cart"></ImageView>


                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="TAX"
                                        android:textAlignment="textEnd"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/C12dp"
                                        android:textStyle="bold"></TextView>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:visibility="gone">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="Disc."
                                        android:textAlignment="textEnd"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/C12dp"
                                        android:textStyle="bold"></TextView>
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">

                                    <TextView
                                        android:id="@+id/total"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="Total"
                                        android:textAlignment="textEnd"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/C12dp"
                                        android:textStyle="bold"></TextView>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"

                        android:layout_marginLeft="@dimen/C5dp"
                        android:layout_marginRight="@dimen/C5dp"
                        android:background="@color/black"></View>

                </LinearLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/orderrecyclerview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="visible"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cdFreeQtyParent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C5dp"
                            android:visibility="gone"
                            app:cardBackgroundColor="@color/grey_50"
                            app:cardCornerRadius="@dimen/C5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/C3dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/C3dp"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:maxLines="1"
                                        android:text="SKU"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/C12dp"
                                        android:textStyle="bold"></TextView>

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.5"
                                        android:gravity="end"
                                        android:text="Free"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/C12dp"
                                        android:textStyle="bold"></TextView>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/freeRecyclerview"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:visibility="visible"
                                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>


                        <LinearLayout
                            android:id="@+id/llPayNetAmountDetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="PRICE DETAILS"
                                android:textAlignment="textStart"
                                android:textColor="@color/grey_600"
                                android:textSize="@dimen/C13dp"></TextView>


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/grey_200"></View>


                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp">

                                <TextView
                                    android:id="@+id/tvTotLabel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Subtotal"
                                    android:textAlignment="textStart"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/C13dp"></TextView>

                                <TextView
                                    android:id="@+id/subtotal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif"
                                    android:text="200.00"
                                    android:textAlignment="viewEnd"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/C13dp"></TextView>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Total item"
                                    android:textAlignment="textStart"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/C13dp"></TextView>

                                <TextView
                                    android:id="@+id/totalitem"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="5"
                                    android:textAlignment="viewEnd"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/C13dp"></TextView>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Total Qty"
                                    android:textAlignment="textStart"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/C13dp"></TextView>

                                <TextView
                                    android:id="@+id/tvtotalqty"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="10"
                                    android:textAlignment="viewEnd"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/C13dp"></TextView>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Total Free Qty"
                                    android:textAlignment="textStart"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/C13dp"></TextView>

                                <TextView
                                    android:id="@+id/totalfreeqty"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="2"
                                    android:textAlignment="viewEnd"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/C13dp"></TextView>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tvTaxLabel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif"
                                    android:textAlignment="textStart"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/C13dp"></TextView>

                                <TextView
                                    android:id="@+id/tvTaxVal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif"
                                    android:textAlignment="viewEnd"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/C13dp"></TextView>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Discount"
                                    android:textAlignment="textStart"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/C13dp"></TextView>

                                <TextView
                                    android:id="@+id/tvcashdiscount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif"
                                    android:text="0.00"
                                    android:textAlignment="viewEnd"
                                    android:textColor="@color/green"
                                    android:textSize="@dimen/C13dp"></TextView>
                            </RelativeLayout>


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_marginTop="-10dp"
                                android:background="@color/black"
                                android:outlineAmbientShadowColor="@color/black"></View>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="TO PAY"
                                    android:textAlignment="textStart"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/C13dp"
                                    android:textStyle="bold"></TextView>

                                <TextView
                                    android:id="@+id/tvnetamount"
                                    android:layout_width="match_parent"

                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif"
                                    android:text="1000.00"
                                    android:textAlignment="viewEnd"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/C13dp"
                                    android:textStyle="bold"></TextView>
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:background="@color/black"
                                android:outlineAmbientShadowColor="@color/black"
                                android:visibility="visible"></View>


                            <TextView
                                android:id="@+id/tvSaveAmt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/C10dp"

                                android:fontFamily="sans-serif"
                                android:text=""
                                android:textColor="@color/green"
                                android:textSize="@dimen/C13dp"
                                android:textStyle="bold"></TextView>


                        </LinearLayout>


                    </LinearLayout>
                </ScrollView>


            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <RelativeLayout

            android:id="@+id/rlTakeOrder"
            style="@style/BottomButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/C50dp"
            android:layout_margin="@dimen/C5dp"
            android:padding="@dimen/C5dp"
            android:visibility="visible">

            <ImageView

                android:id="@+id/ivCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/C5dp"
                android:src="@drawable/ic_round_shopping_bag_24"
                app:tint="@color/white"></ImageView>

            <TextView
                android:id="@+id/tvCart"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/C45dp"
                android:layout_toRightOf="@+id/ivCart"
                android:gravity="center_vertical"
                android:text="|"
                android:textColor="@color/white"
                android:visibility="gone">


            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/C3dp"
                android:layout_toRightOf="@+id/tvCart"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tvTotalItems"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Items : 0"
                    android:textColor="@color/white"
                    android:textSize="11sp">

                </TextView>

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tvTotalAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text=" ₹ 0"
                    android:textColor="@color/white"
                    android:textSize="13sp">

                </TextView>


            </LinearLayout>

            <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                android:id="@+id/takeorder"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#00FFFFFF"
                android:text="PROCEED"
                android:textColor="@color/white"
                android:theme="@style/BluePrimaryButton"
                app:finalCornerAngle="50dp"
                app:initialCornerAngle="0dp"
                app:spinning_bar_color="#FFFFFFFF"
                app:spinning_bar_padding="5dp"
                app:spinning_bar_width="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/C15dp"
                android:drawableTint="@color/white"
                android:text="PROCEED"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>


