<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SFA_Activity.AddNewDistributor"
    tools:ignore="SpUsage,HardcodedText,Autofill,TextFields,ContentDescription">

    <include layout="@layout/sfatoolbar" />

    <TextView
        android:id="@+id/headtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_bg"
        android:fontFamily="@font/basic"
        android:padding="@dimen/C8dp"
        android:text="Add New Distributor"
        android:textAllCaps="true"
        android:textColor="#FFF"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/C10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/C8dp"
                        android:layout_marginTop="@dimen/C15dp"
                        android:text="@string/customer_photo"
                        android:textSize="@dimen/C14dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/C10dp"
                        android:layout_marginTop="@dimen/C10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/capture_customer_photo"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginEnd="@dimen/C8dp"
                            android:src="@drawable/ic_round_photo_camera_24" />

                        <ImageView
                            android:id="@+id/display_customer_photo"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginEnd="@dimen/C8dp"
                            android:src="@drawable/ic_round_photo_camera_24"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/C10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/C8dp"
                        android:layout_marginTop="@dimen/C15dp"
                        android:text="@string/shop_photo"
                        android:textSize="@dimen/C14dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/C10dp"
                        android:layout_marginTop="@dimen/C10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/capture_shop_photo"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginEnd="@dimen/C8dp"
                            android:src="@drawable/ic_round_photo_camera_24" />

                        <ImageView
                            android:id="@+id/display_shop_photo"
                            android:layout_width="@dimen/C100dp"
                            android:layout_height="@dimen/C100dp"
                            android:layout_marginEnd="@dimen/C8dp"
                            android:src="@drawable/ic_round_photo_camera_24"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C8dp"
                android:layout_marginTop="@dimen/C15dp"
                android:text="@string/state_code"
                android:textSize="@dimen/C14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/select_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C10dp"
                android:layout_marginTop="@dimen/C5dp"
                android:background="@drawable/textbox_bg"
                android:elevation="5dp"
                android:hint="Select State"
                android:padding="@dimen/C8dp"
                android:textColor="@color/black"
                android:textSize="@dimen/C13dp"
                app:drawableEndCompat="@drawable/ic_arrow_drop_down" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C8dp"
                android:layout_marginTop="@dimen/C15dp"
                android:text="@string/region"
                android:textSize="@dimen/C14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/select_region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C10dp"
                android:layout_marginTop="@dimen/C5dp"
                android:background="@drawable/textbox_bg"
                android:elevation="5dp"
                android:hint="Select Region"
                android:padding="@dimen/C8dp"
                android:textColor="@color/black"
                android:textSize="@dimen/C13dp"
                app:drawableEndCompat="@drawable/ic_arrow_drop_down" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C8dp"
                android:layout_marginTop="@dimen/C15dp"
                android:text="@string/sales_office_name"
                android:textSize="@dimen/C14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/select_sales_office_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C10dp"
                android:layout_marginTop="@dimen/C5dp"
                android:background="@drawable/textbox_bg"
                android:elevation="5dp"
                android:hint="Select Sales Office Name"
                android:padding="@dimen/C8dp"
                android:textColor="@color/black"
                android:textSize="@dimen/C13dp"
                app:drawableEndCompat="@drawable/ic_arrow_drop_down" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C8dp"
                android:layout_marginTop="@dimen/C15dp"
                android:text="@string/route_name"
                android:textSize="@dimen/C14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/select_route_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C10dp"
                android:layout_marginTop="@dimen/C5dp"
                android:background="@drawable/textbox_bg"
                android:elevation="5dp"
                android:hint="Select Route Name"
                android:padding="@dimen/C8dp"
                android:textColor="@color/black"
                android:textSize="@dimen/C13dp"
                app:drawableEndCompat="@drawable/ic_arrow_drop_down"  />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C8dp"
                android:layout_marginTop="@dimen/C15dp"
                android:text="@string/channel"
                android:textSize="@dimen/C14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/select_channel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C10dp"
                android:layout_marginTop="@dimen/C5dp"
                android:background="@drawable/textbox_bg"
                android:elevation="5dp"
                android:hint="Select Channel"
                android:padding="@dimen/C8dp"
                android:textColor="@color/black"
                android:textSize="@dimen/C13dp"
                app:drawableEndCompat="@drawable/ic_arrow_drop_down" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C8dp"
                android:layout_marginTop="@dimen/C15dp"
                android:text="@string/city"
                android:textSize="@dimen/C14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/type_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C10dp"
                android:layout_marginTop="@dimen/C5dp"
                android:background="@drawable/textbox_bg"
                android:elevation="5dp"
                android:hint="Enter City"
                android:inputType="text"
                android:padding="@dimen/C8dp"
                android:textColor="@color/black"
                android:textSize="@dimen/C13dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C8dp"
                android:layout_marginTop="@dimen/C15dp"
                android:text="@string/postal_code_pincode"
                android:textSize="@dimen/C14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/type_pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C10dp"
                android:layout_marginTop="@dimen/C5dp"
                android:background="@drawable/textbox_bg"
                android:elevation="5dp"
                android:hint="Enter Pincode"
                android:inputType="number"
                android:maxLength="6"
                android:padding="@dimen/C8dp"
                android:textColor="@color/black"
                android:textSize="@dimen/C13dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C8dp"
                android:layout_marginTop="@dimen/C15dp"
                android:text="@string/name_of_the_customer"
                android:textSize="@dimen/C14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/type_name_of_the_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C10dp"
                android:layout_marginTop="@dimen/C5dp"
                android:background="@drawable/textbox_bg"
                android:elevation="5dp"
                android:hint="Enter Name of the Customer"
                android:inputType="textPersonName"
                android:padding="@dimen/C8dp"
                android:textColor="@color/black"
                android:textSize="@dimen/C13dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C8dp"
                android:layout_marginTop="@dimen/C15dp"
                android:text="@string/name_of_the_owner"
                android:textSize="@dimen/C14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/type_name_of_the_owner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C10dp"
                android:layout_marginTop="@dimen/C5dp"
                android:background="@drawable/textbox_bg"
                android:elevation="5dp"
                android:hint="Enter Name of the Owner"
                android:inputType="textPersonName"
                android:padding="@dimen/C8dp"
                android:textColor="@color/black"
                android:textSize="@dimen/C13dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C8dp"
                android:layout_marginTop="@dimen/C15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/address_of_the_shop"
                    android:textSize="@dimen/C14dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/refreshLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_refresh"/>

            </LinearLayout>

            <fragment
                android:id="@+id/route_map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginHorizontal="@dimen/C12dp"
                android:layout_marginTop="@dimen/C5dp" />

            <EditText
                android:id="@+id/type_address_of_the_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C10dp"
                android:layout_marginTop="@dimen/C8dp"
                android:background="@drawable/textbox_bg"
                android:elevation="5dp"
                android:gravity="start"
                android:lines="4"
                android:minLines="4"
                android:inputType="textMultiLine"
                android:hint="Enter Address of the Shop"
                android:padding="@dimen/C8dp"
                android:textColor="@color/black"
                android:textSize="@dimen/C13dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C8dp"
                android:layout_marginTop="@dimen/C15dp"
                android:text="@string/residence_address"
                android:textSize="@dimen/C14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/type_residence_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C10dp"
                android:layout_marginTop="@dimen/C5dp"
                android:background="@drawable/textbox_bg"
                android:elevation="5dp"
                android:gravity="start"
                android:lines="4"
                android:minLines="4"
                android:inputType="textMultiLine"
                android:hint="Enter Residence Address"
                android:padding="@dimen/C8dp"
                android:textColor="@color/black"
                android:textSize="@dimen/C13dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C8dp"
                android:layout_marginTop="@dimen/C15dp"
                android:text="@string/mobile"
                android:textSize="@dimen/C14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/type_mobile_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C10dp"
                android:layout_marginTop="@dimen/C5dp"
                android:background="@drawable/textbox_bg"
                android:elevation="5dp"
                android:hint="Enter 10 digit Mobile Number"
                android:inputType="number"
                android:maxLength="10"
                android:padding="@dimen/C8dp"
                android:textColor="@color/black"
                android:textSize="@dimen/C13dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C8dp"
                android:layout_marginTop="@dimen/C15dp"
                android:text="@string/email_id"
                android:textSize="@dimen/C14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/type_email_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C10dp"
                android:layout_marginTop="@dimen/C5dp"
                android:background="@drawable/textbox_bg"
                android:elevation="5dp"
                android:hint="Enter Email Id"
                android:inputType="textEmailAddress"
                android:padding="@dimen/C8dp"
                android:textColor="@color/black"
                android:textSize="@dimen/C13dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C8dp"
                android:layout_marginTop="@dimen/C15dp"
                android:text="@string/sales_executive_name"
                android:textSize="@dimen/C14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/type_sales_executive_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C10dp"
                android:layout_marginTop="@dimen/C5dp"
                android:background="@drawable/textbox_bg"
                android:elevation="5dp"
                android:hint="Enter Sales Executive Name"
                android:inputType="textPersonName"
                android:padding="@dimen/C8dp"
                android:textColor="@color/black"
                android:textSize="@dimen/C13dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C8dp"
                android:layout_marginTop="@dimen/C15dp"
                android:text="@string/sales_executive_employee_id"
                android:textSize="@dimen/C14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/type_sales_executive_employee_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C10dp"
                android:layout_marginTop="@dimen/C5dp"
                android:background="@drawable/textbox_bg"
                android:elevation="5dp"
                android:hint="Enter Sales Executive - Employee ID"
                android:inputType="text"
                android:maxLength="15"
                android:padding="@dimen/C8dp"
                android:textColor="@color/black"
                android:textSize="@dimen/C13dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C8dp"
                android:layout_marginTop="@dimen/C15dp"
                android:text="@string/date_of_creation"
                android:textSize="@dimen/C14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date_of_creation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C10dp"
                android:layout_marginTop="@dimen/C5dp"
                android:background="@drawable/textbox_bg"
                android:elevation="5dp"
                android:hint="Date of Creation"
                android:padding="@dimen/C8dp"
                android:textColor="@color/black"
                android:textSize="@dimen/C13dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C8dp"
                android:layout_marginTop="@dimen/C15dp"
                android:text="@string/aadhaar_number"
                android:textSize="@dimen/C14dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/type_aadhaar_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/C10dp"
                    android:layout_marginTop="@dimen/C5dp"
                    android:layout_marginBottom="@dimen/C15dp"
                    android:layout_weight="1"
                    android:background="@drawable/textbox_bg"
                    android:elevation="5dp"
                    android:hint="Enter Aadhaar Number"
                    android:inputType="number"
                    android:maxLength="12"
                    android:padding="@dimen/C8dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/C13dp" />

                <ImageView
                    android:id="@+id/display_aadhaar_number"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="@dimen/C8dp"
                    android:src="@drawable/ic_round_photo_camera_24"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/capture_aadhaar_number"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="@dimen/C8dp"
                    android:src="@drawable/ic_round_photo_camera_24" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C8dp"
                android:text="@string/pan_number"
                android:textSize="@dimen/C14dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/type_pan_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/C10dp"
                    android:layout_marginTop="@dimen/C5dp"
                    android:layout_marginBottom="@dimen/C15dp"
                    android:layout_weight="1"
                    android:background="@drawable/textbox_bg"
                    android:elevation="5dp"
                    android:hint="Enter PAN Number"
                    android:inputType="text"
                    android:maxLength="10"
                    android:padding="@dimen/C8dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/C13dp" />

                <ImageView
                    android:id="@+id/display_pan_number"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="@dimen/C8dp"
                    android:src="@drawable/ic_round_photo_camera_24"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/capture_pan_number"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="@dimen/C8dp"
                    android:src="@drawable/ic_round_photo_camera_24" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C8dp"
                android:text="@string/bank_details"
                android:textSize="@dimen/C14dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/select_bank_details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/C10dp"
                    android:layout_marginTop="@dimen/C5dp"
                    android:layout_marginBottom="@dimen/C15dp"
                    android:layout_weight="1"
                    android:background="@drawable/textbox_bg"
                    android:elevation="5dp"
                    android:hint="Select Bank Details"
                    android:padding="@dimen/C8dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/C13dp"
                    app:drawableEndCompat="@drawable/ic_arrow_drop_down" />

                <ImageView
                    android:id="@+id/display_bank_details"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="@dimen/C8dp"
                    android:src="@drawable/ic_round_photo_camera_24"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/capture_bank_details"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="@dimen/C8dp"
                    android:src="@drawable/ic_round_photo_camera_24" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C8dp"
                android:text="@string/fssai_certificate_applied_details"
                android:textSize="@dimen/C14dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/type_fssai"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/C10dp"
                    android:layout_marginTop="@dimen/C5dp"
                    android:layout_marginBottom="@dimen/C15dp"
                    android:layout_weight="1"
                    android:background="@drawable/textbox_bg"
                    android:elevation="5dp"
                    android:hint="Enter FSSAI Certificate / Applied Details"
                    android:inputType="text"
                    android:padding="@dimen/C8dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/C13dp" />

                <ImageView
                    android:id="@+id/display_fssai"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="@dimen/C8dp"
                    android:src="@drawable/ic_round_photo_camera_24"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/capture_fssai"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="@dimen/C8dp"
                    android:src="@drawable/ic_round_photo_camera_24" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/C8dp"
                android:text="@string/gst_certificate_declaration"
                android:textSize="@dimen/C14dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
