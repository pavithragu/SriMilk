<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/sfatoolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/C100dp">

            <ScrollView

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:background="@drawable/button_yellow"
                        android:gravity="center"
                        android:padding="@dimen/C10dp"
                        android:text="Outlet Approval"
                        android:textAllCaps="true"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/C14dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/misseddatelayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/C5dp"
                            android:layout_marginTop="10dp"
                            android:text="Name" />

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/C5dp"
                            android:layout_marginTop="@dimen/C5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/textbox_bg"
                            android:elevation="10dp"
                            android:gravity="start"
                            android:hint="@string/selectmissed_date"
                            android:padding="@dimen/C10dp"
                            android:text="haptest5" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/C5dp"
                            android:layout_marginTop="10dp"
                            android:text="Des" />

                        <TextView
                            android:id="@+id/tvDes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/C5dp"
                            android:layout_marginTop="@dimen/C5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/textbox_bg"
                            android:elevation="10dp"
                            android:gravity="start"
                            android:hint="@string/selectmissed_date"
                            android:padding="@dimen/C10dp"
                            android:text="BDE" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/C5dp"
                            android:layout_marginTop="10dp"
                            android:text="HO" />

                        <TextView
                            android:id="@+id/tvHO"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/C5dp"
                            android:layout_marginTop="@dimen/C5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/textbox_bg"
                            android:elevation="10dp"
                            android:gravity="start"
                            android:hint="@string/selectmissed_date"
                            android:padding="@dimen/C10dp"
                            android:text="Salem" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/C5dp"
                            android:layout_marginTop="10dp"
                            android:text="Applied Date" />

                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/C5dp"
                            android:layout_marginTop="@dimen/C5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/textbox_bg"
                            android:elevation="10dp"
                            android:gravity="start"
                            android:hint="@string/selectmissed_date"
                            android:padding="@dimen/C10dp"
                            android:text="2022-01-16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/C5dp"
                            android:layout_marginTop="@dimen/C10dp"
                            android:text="Status " />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/C3dp"
                            android:visibility="visible">

                            <CheckBox
                                android:id="@+id/cbFreezerYes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"></CheckBox>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:paddingRight="@dimen/C3dp"
                                android:text="Approval"
                                android:textColor="@color/black" />

                            <CheckBox
                                android:id="@+id/cbFreezerNo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/C15dp"
                                android:paddingLeft="@dimen/C3dp"></CheckBox>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:text="Rejected"
                                android:textColor="@color/black" />
                        </LinearLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/C5dp"
                            android:layout_marginTop="@dimen/C10dp"
                            android:text="Reason " />

                        <EditText
                            android:layout_marginBottom="@dimen/C10dp"
                            android:id="@+id/reason_missed"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/C100dp"
                            android:layout_marginLeft="@dimen/C5dp"
                            android:layout_marginTop="@dimen/C10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/textbox_bg"
                            android:elevation="@dimen/C5dp"
                            android:gravity="start"
                            android:hint="Reason"
                            android:padding="@dimen/C10dp"
                            android:textColor="@color/grey_500"
                            android:textSize="@dimen/C13dp" />

                    </LinearLayout>


                </LinearLayout>


            </ScrollView>


        </LinearLayout>


    </LinearLayout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#99ECEAEA"
            android:orientation="vertical">

            <Button
                android:id="@+id/submit_missed"
                style="@style/ButtonStyle"
                android:background="@drawable/button_blueg"
                android:text="SUBMIT" />


        </LinearLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>