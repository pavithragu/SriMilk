<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints,UselessLeaf">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/C7dp"
            android:layout_marginRight="@dimen/C7dp"
            android:layout_marginBottom="@dimen/C7dp"
            android:elevation="@dimen/C5dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/C8dp"
                android:layout_marginRight="@dimen/C8dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/sf_namelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/C5dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/SfName"
                        style="@style/TextStyle"></TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/C5dp">

                    <TextView
                        android:id="@+id/weekofdate"
                        style="@style/DashboardTextStyleBold"
                        android:layout_centerVertical="true"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/wkstatus"
                        style="@style/TextStyle"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/bt_radious"
                        android:paddingLeft="@dimen/C10dp"
                        android:paddingTop="@dimen/C1dp"
                        android:paddingRight="@dimen/C10dp"
                        android:paddingBottom="0dp"
                        android:textColor="@android:color/white" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_margin="@dimen/C5dp"
                    android:background="@android:color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/C10dp"
                    android:layout_marginRight="@dimen/C10dp"
                    android:layout_marginBottom="@dimen/C10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextStyle"
                            android:layout_width="match_parent"
                            android:layout_margin="0dp"
                            android:text="Shift Time"
                            android:textAlignment="textEnd"
                            android:textAllCaps="true"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/shifttime"
                            style="@style/TextStyle"
                            android:layout_width="match_parent"
                            android:layout_margin="0dp"
                            android:textAlignment="textEnd"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/C5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextStyle"
                                android:layout_margin="0dp"
                                android:text="IN TIME"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/txt_in_time"
                                style="@style/TextStyle"
                                android:layout_width="match_parent"
                                android:layout_margin="0dp"
                                android:text=""
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextStyle"
                                android:layout_width="match_parent"
                                android:layout_alignParentRight="true"
                                android:layout_margin="0dp"
                                android:text="OUT TIME"
                                android:textAlignment="textEnd"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/txt_out_time"
                                style="@style/TextStyle"
                                android:layout_width="match_parent"
                                android:layout_margin="0dp"
                                android:text=""
                                android:textAlignment="textEnd"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/C5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextStyle"
                                android:layout_margin="0dp"
                                android:text="IN GEO"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/txt_in_geo"
                                style="@style/TextStyle"
                                android:layout_width="match_parent"
                                android:layout_margin="0dp"
                                android:text=""
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextStyle"
                                android:layout_width="match_parent"
                                android:layout_alignParentRight="true"
                                android:layout_margin="0dp"
                                android:text="OUT GEO"
                                android:textAlignment="textEnd"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/txt_out_geo"
                                style="@style/TextStyle"
                                android:layout_width="match_parent"
                                android:layout_margin="0dp"
                                android:text=""
                                android:textAlignment="textEnd"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/C5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextStyle"
                                android:layout_margin="0dp"
                                android:text="Location"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/txt_loc"
                                style="@style/TextStyle"
                                android:layout_width="match_parent"
                                android:layout_margin="0dp"
                                android:text=" - "
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/llOnDuty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/C5dp"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cbOnDuty"
                            style="@style/TextStyle"
                            android:layout_margin="0dp"
                            android:layout_weight="1"
                            android:text="Holiday Entry"
                            android:textSize="10sp" />

                        <Button
                            android:id="@+id/btnUpdate"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/C5dp"
                            android:layout_marginRight="@dimen/C5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="0dp"
                            android:background="@drawable/button_blueg"
                            android:padding="@dimen/C5dp"
                            android:text="Update"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>