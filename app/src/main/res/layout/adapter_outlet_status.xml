<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints,UselessLeaf">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/C8dp"
            android:elevation="@dimen/C8dp"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            app:cardCornerRadius="10dp"
            app:shapeAppearanceOverlay="@color/black">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/C12dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/sf_namelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/C5dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/SfName"
                        style="@style/TextStyleOne"
                        android:layout_weight="1"
                        android:text="-"
                        android:textColor="@android:color/black"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/fromdatetodate"
                        style="@style/TextStyleOne"
                        android:layout_weight="1"
                        android:padding="@dimen/C7dp"
                        android:text="19-01-2022"
                        android:textColor="@android:color/black"
                        android:textSize="11sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/LStatus"
                        style="@style/TextStyleOne"
                        android:text="Approved"
                        android:textColor="@android:color/white" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_margin="@dimen/C5dp"
                    android:background="@android:color/black" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/C7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/C7dp">

                        <TextView

                            style="@style/TextStyleOne"
                            android:layout_weight="1"
                            android:text="name"
                            android:textAllCaps="true"
                            android:textColor="@color/dark_greys"
                            android:textSize="11dp" />

                        <TextView
                            style="@style/TextStyleOne"
                            android:text="Des"
                            android:textAllCaps="true"
                            android:textColor="@color/dark_greys"
                            android:textSize="11dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/leavetype"
                            style="@style/TextStyleOne"
                            android:layout_weight="1"
                            android:text="ciadmin"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/leavedays"
                            style="@style/TextStyleOne"
                            android:text="BDE"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        style="@style/TextStyleOne"
                        android:layout_marginTop="@dimen/C10dp"
                        android:text="HO"
                        android:textAllCaps="true"
                        android:textColor="@color/dark_greys"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/leavereason"
                        style="@style/TextStyleOne"
                        android:text="Salem"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/applieddate"
                            style="@style/TextStyleOne"
                            android:layout_marginTop="@dimen/C7dp"
                            android:layout_weight="1"
                            android:text="Applied:19-01-2022"
                            android:textColor="@color/dark_greys"
                            android:textSize="13dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/approvedate"
                            style="@style/TextStyleOne"
                            android:layout_marginTop="@dimen/C7dp"
                            android:text="Approved:20-01-2022"
                            android:textColor="@color/dark_greys"
                            android:textSize="13dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/C5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/linear_cancel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:visibility="gone">

                            <Button
                                android:id="@+id/button_cancel"
                                style="@style/DashboardButton"
                                android:background="@drawable/button_red"
                                android:text="CANCEL" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linear_reason"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <EditText
                                android:id="@+id/reason_permission"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/C40dp"
                                android:layout_margin="@dimen/C5dp"
                                android:layout_marginTop="@dimen/C5dp"
                                android:background="@drawable/textbox_bg"
                                android:elevation="@dimen/C5dp"
                                android:gravity="start"
                                android:hint="Reason"
                                android:padding="@dimen/C5dp"
                                android:textSize="@dimen/C13dp" />

                            <Button
                                android:id="@+id/reason_send"
                                style="@style/ButtonStyle"
                                android:layout_gravity="center"
                                android:background="@drawable/button_blueg"
                                android:padding="@dimen/C5dp"
                                android:text="SEND" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>