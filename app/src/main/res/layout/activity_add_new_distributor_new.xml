<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SFA_Activity.AddNewDistributor"
    tools:ignore="SpUsage,HardcodedText,Autofill,TextFields,ContentDescription">

    <include layout="@layout/sfatoolbar" />

    <TextView
        android:id="@+id/headtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_bg"
        android:fontFamily="@font/basic"
        android:padding="@dimen/C8dp"
        android:text="Add New Distributor"
        android:textAllCaps="true"
        android:textColor="#FFF"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/type_pan_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/C10dp"
                    android:layout_marginTop="@dimen/C5dp"
                    android:layout_marginBottom="@dimen/C15dp"
                    android:layout_weight="1"
                    android:background="@drawable/textbox_bg"
                    android:elevation="5dp"
                    android:hint="Enter PAN Number"
                    android:inputType="text"
                    android:maxLength="10"
                    android:padding="@dimen/C8dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/C13dp" />

                <ImageView
                    android:id="@+id/display_pan_number"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="@dimen/C8dp"
                    android:src="@drawable/ic_round_photo_camera_24"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/capture_pan_number"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="@dimen/C8dp"
                    android:src="@drawable/ic_round_photo_camera_24" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>