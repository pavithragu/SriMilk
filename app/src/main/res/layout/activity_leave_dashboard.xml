<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activity_Hap.Leave_Dashboard">

        <include layout="@layout/custom_toolbar_help" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar3"
            android:layout_marginBottom="@dimen/C60dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_yellow"
                            android:gravity="center"
                            android:padding="@dimen/C10dp"
                            android:text="Request"
                            android:textAllCaps="true"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/C14dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/lin_Advance_req"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp"
                            >

                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight="1"
                                android:text="Advance Request"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_right" />
                        </LinearLayout>

                        <include layout="@layout/part_view" />

                        <LinearLayout
                            android:id="@+id/lin_leave_req"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp">

                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight="1"
                                android:text="Leave Request"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_right" />
                        </LinearLayout>

                        <include layout="@layout/part_view" />
                        <LinearLayout
                            android:id="@+id/lin_newjoin_req"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp">

                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight="1"
                                android:text="New Joinee Request"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_right" />
                        </LinearLayout>

                        <include layout="@layout/part_view" />

                        <LinearLayout
                            android:id="@+id/lin_per_req"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp">

                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight="1"
                                android:text="Permission Request"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_right" />
                        </LinearLayout>

                        <include layout="@layout/part_view" />

                        <LinearLayout
                            android:id="@+id/lin_fligh_mode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp">

                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight="1"
                                android:text="Flight Ticket Booking"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_right" />

                        </LinearLayout>

                        <include layout="@layout/part_view" />

                        <LinearLayout
                            android:id="@+id/lin_miss_punch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp">

                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight="1"
                                android:text="Missed Punch"
                                android:textSize="16sp"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_right" />
                        </LinearLayout>

                        <include layout="@layout/part_view" />

                        <LinearLayout
                            android:id="@+id/lin_week_off"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp">

                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight="1"
                                android:text="Weekly Off"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_right" />

                        </LinearLayout>

                        <include layout="@layout/part_view" />


                        <LinearLayout
                            android:id="@+id/lin_deviation_entry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp">

                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight="1"
                                android:text="Deviation Entry"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_right" />

                        </LinearLayout>

                        <include layout="@layout/part_view" />


                        <LinearLayout
                            android:id="@+id/lin_da_excep"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp">

                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight="1"
                                android:text="Travel Mode Exception Request"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_right" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_yellow"
                            android:gravity="center"
                            android:padding="@dimen/C10dp"
                            android:text="Status"
                            android:textAllCaps="true"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/C14dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/lin_Advance_sta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp">

                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight="1"
                                android:text="Advance Status"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_right" />

                        </LinearLayout>

                        <include layout="@layout/part_view" />
                        <LinearLayout
                            android:id="@+id/lin_leav_sta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp">

                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight="1"
                                android:text="Leave Status"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_right" />

                        </LinearLayout>

                        <include layout="@layout/part_view" />

                        <LinearLayout
                            android:id="@+id/lin_per_sta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp">


                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight="1"
                                android:text="Permission Status"
                                android:textSize="16sp" />


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_right" />


                        </LinearLayout>

                        <include layout="@layout/part_view" />

                        <LinearLayout
                            android:id="@+id/lin_duty_sta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp">

                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight="1"
                                android:text="On-Duty Status"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_right" />


                        </LinearLayout>

                        <include layout="@layout/part_view" />

                        <LinearLayout
                            android:id="@+id/lin_miss_sta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp">

                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight="1"
                                android:text="Missed Punch Status"
                                android:textSize="16sp" />


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_right" />

                        </LinearLayout>

                        <include layout="@layout/part_view" />

                        <LinearLayout
                            android:id="@+id/lin_week_off_sta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp">

                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight="1"
                                android:text="Weekly-Off Status"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_right" />

                        </LinearLayout>

                        <include layout="@layout/part_view" />


                        <LinearLayout
                            android:id="@+id/lin_ext_shift"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp">


                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight="1"
                                android:text="Extended Shift Status"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_right" />


                        </LinearLayout>

                        <include layout="@layout/part_view" />


                        <LinearLayout
                            android:id="@+id/lin_holiday_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp">


                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight="1"
                                android:text="Holiday Entry Status"
                                android:textSize="16sp" />


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_right" />
                        </LinearLayout>

                        <include layout="@layout/part_view" />

                        <LinearLayout
                            android:id="@+id/lin_deviation_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp">

                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight="1"
                                android:text="Deviation Entry Status"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_right" />


                        </LinearLayout>

                        <include layout="@layout/part_view" />


                        <LinearLayout
                            android:id="@+id/lin_leave_cancel_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp">

                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight="1"
                                android:text="Leave Cancel Status"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_right" />


                        </LinearLayout>


                        <include layout="@layout/part_view" />

                        <LinearLayout
                            android:id="@+id/lin_da_excep_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/TextStyle"
                                    android:text="Travel Mode Exception Status"
                                    android:textSize="16sp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:orientation="horizontal">

                                    <include layout="@layout/image_arrow" />
                                </LinearLayout>
                            </RelativeLayout>

                        </LinearLayout>


                        <include layout="@layout/part_view" />


                        <LinearLayout
                            android:id="@+id/lin_flight_booking_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/C10dp">

                            <TextView
                                style="@style/TextStyle"
                                android:layout_weight="1"
                                android:text="Flight Booking Status"
                                android:textSize="16sp" />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_right" />


                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <include layout="@layout/back_arrow"></include>


</androidx.constraintlayout.widget.ConstraintLayout>