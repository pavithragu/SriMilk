<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linFldrList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/AppTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/C3dp"
                android:padding="10dp"
                android:text="Check-In"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/AppTitle"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="-14dp"
                android:text="@string/app_ver"
                android:textColor="@color/white"
                android:textSize="8sp" />
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/btnCanteen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="@dimen/C5dp"
            android:layout_marginRight="@dimen/C5dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Canteen Detail"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/toolbar_home"
            android:layout_width="@dimen/C30dp"
            android:layout_height="@dimen/C30dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="@dimen/C3dp"
            android:layout_marginRight="@dimen/C8dp"
            android:gravity="center_horizontal|center_vertical"
            android:padding="5dp"
            android:src="@drawable/ic_home"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/C16dp"
            android:layout_marginTop="@dimen/C16dp"
            android:layout_marginRight="@dimen/C16dp"
            android:background="@drawable/button_yellow"
            android:elevation="5dp"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="@dimen/C10dp"
            android:text="Canteen Card"
            android:textColor="#fff"
            android:textAllCaps="true"
            android:textSize="@dimen/C14dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/C16dp"
            android:layout_marginTop="-5dp"
            android:layout_marginRight="@dimen/C16dp"
            android:layout_marginBottom="@dimen/C16dp"

            app:cardCornerRadius="@dimen/C10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/C5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/HQName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/basic"
                    android:paddingTop="@dimen/C5dp"
                    android:text="CC Name"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textFontWeight="900"
                    android:textSize="20sp"
                    android:textStyle="bold"></TextView>

                <ImageView
                    android:id="@+id/imgQR"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitCenter" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/imgProf"
                        android:layout_width="150dp"
                        android:layout_height="170dp"
                        android:background="@color/grey_100"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/btnProfile"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignEnd="@id/imgProf"
                        android:layout_alignBottom="@id/imgProf"
                        android:layout_margin="@dimen/C5dp"
                        android:src="@drawable/ic_editpen"
                        app:tint="@color/colorPrimaryDark">

                    </ImageView>
                </RelativeLayout>

                <TextView
                    android:id="@+id/empName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/C5dp"
                    android:fontFamily="@font/basic"
                    android:text="Name"
                    android:textAlignment="center"
                    android:textSize="15sp"></TextView>

                <TextView
                    android:id="@+id/empcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/C5dp"
                    android:fontFamily="@font/basic"
                    android:text="EMP ID"
                    android:textAlignment="center"
                    android:textSize="15sp"></TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>