<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/C5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/C40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tpEmpId"
            android:layout_width="@dimen/C10dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="5501"/>
        <TextView
            android:id="@+id/tpName"
            android:layout_width="@dimen/C40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Kumar"/>
        <TextView
            android:id="@+id/tpDesignation"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Sr.Officer"/>
        <TextView
            android:id="@+id/tpHQ"
            android:layout_width="@dimen/C60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Kanchipuram"/>
        <TextView
            android:id="@+id/openDetails"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_marginStart="@dimen/C5dp"
            android:layout_marginEnd="@dimen/C5dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/pjp_button_blue"
            android:padding="@dimen/C3dp"
            android:text="Details"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textAlignment="center"
            android:textColor="@color/color_white" />


