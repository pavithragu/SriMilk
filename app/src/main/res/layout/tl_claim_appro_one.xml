<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_travel_loaction"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/C8dp"
    app:cardCornerRadius="@dimen/C5dp"
    tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_row_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enter_to"
            android:layout_margin="@dimen/C3dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/enter_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Select the Mode"
                android:paddingLeft="@dimen/C10dp"
                android:paddingTop="@dimen/C5dp"
                android:paddingBottom="@dimen/C5dp"
                android:textSize="@dimen/C16dp" />


            <ImageView
                android:layout_width="@dimen/C10dp"
                android:layout_height="@dimen/C10dp"
                android:layout_margin="@dimen/C10dp"
                android:src="@drawable/spin_down_arrow"></ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_tv_ukey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>


        <EditText
            android:id="@+id/enter_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:enabled="false"
            android:hint="Enter From"
            android:padding="@dimen/C10dp"
            android:textColorHint="#C0C0C0"
            android:textSize="@dimen/C16dp" />

        <EditText
            android:id="@+id/enter_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:enabled="false"
            android:hint="Enter To"
            android:padding="@dimen/C10dp"
            android:textColorHint="#C0C0C0"
            android:textSize="@dimen/C14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enter_to"
            android:layout_margin="@dimen/C3dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/enter_fare"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:enabled="false"
                android:hint="Enter Fare"
                android:inputType="number"
                android:padding="@dimen/C10dp"
                android:textColorHint="#C0C0C0"
                android:textSize="@dimen/C14dp" />


            <ImageView
                android:id="@+id/tl_img_prv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:src="@drawable/image_preview"></ImageView>


        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
