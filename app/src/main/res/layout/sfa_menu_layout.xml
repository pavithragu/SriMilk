<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/llMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/C3dp"
        android:visibility="visible">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/C5dp"
            app:cardCornerRadius="@dimen/C5dp">

            <LinearLayout
                android:layout_marginTop="@dimen/C5dp"
                android:layout_marginBottom="@dimen/C5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/ivMenuIcon"
                    android:layout_width="@dimen/C40dp"
                    android:tint="@color/colorPrimaryDark"
                    android:layout_height="@dimen/C40dp"
                    android:src="@drawable/ic_report2"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:id="@+id/tvMenuName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/C8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Primary Orders"
                    android:textAlignment="center" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


