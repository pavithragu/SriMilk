<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/C5dp">

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/C5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/C5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="@dimen/C20dp"
                android:layout_height="@dimen/C20dp"
                android:layout_gravity="end"
                android:src="@drawable/close_img"></ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/TextStyleOne"

                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/C1dp"
                    android:text="Emp Id"
                    android:textColor="@android:color/black"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/TextStyleOne"

                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/C1dp"
                    android:text="Name"
                    android:textColor="@android:color/black"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/TextStyleOne"

                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/C1dp"
                    android:text="Company"
                    android:textColor="@android:color/black"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/TextStyleOne"

                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/C1dp"
                    android:text="Mobile"
                    android:textColor="@android:color/black"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView

                    style="@style/TextStyleOne"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/C1dp"
                    android:text="Type"
                    android:textColor="@android:color/black"
                    android:textSize="11sp"
                    android:textStyle="bold" />


            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFlightTravelers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/C3dp"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"></androidx.recyclerview.widget.RecyclerView>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
