<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SFA_Activity.InshopCheckoutActivity">
    <LinearLayout
        android:id="@+id/cout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/C40dp"
        android:background="@drawable/blue_bg"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/C3dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_arrow_back_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/basic"
            android:paddingLeft="@dimen/C10dp"
            android:text="Check-Out"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="18dp"
            android:layout_marginStart="@dimen/C10dp" />
        <TextView
            android:id="@+id/iscoutDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/basic"
            android:layout_marginEnd="@dimen/C10dp"
            android:text="2022-09-24"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:gravity="end"
            android:textColor="#FFF"
            android:textSize="18dp"
            android:layout_marginStart="@dimen/C10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/retailerLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/C15dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/cout_toolbar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retailer: "
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/ischeckoutRetName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvCheckedIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CheckedIn in Inshop"
        android:textSize="16dp"
        android:textColor="@color/greentext"
        android:layout_marginTop="@dimen/C10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/retailerLay"/>
    <TextView
        android:id="@+id/tvCheckinTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/C10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCheckedIn"/>
    <TextView
        android:id="@+id/tvCheckoutRunTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="42dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="@dimen/C20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCheckinTime"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/galleryCard"
        android:layout_width="@dimen/C50dp"
        android:layout_height="@dimen/C50dp"
        app:cardCornerRadius="25dp"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCheckoutRunTime">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/gallery"/>

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tvImgName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Planogram"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/C15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/galleryCard"/>
    <ImageView
        android:id="@+id/cout_attachedImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="@dimen/C30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvImgName"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnInshopCheckout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/C50dp"
        android:background="@drawable/btnstyleblue"
        android:layout_marginLeft="@dimen/C20dp"
        android:layout_marginRight="@dimen/C20dp"
        android:layout_marginTop="@dimen/C40dp"
        android:text="Check Out"
        android:textSize="@dimen/C15dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/cout_attachedImage"/>

    <TextView
        android:id="@+id/tvCheckoutTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/C15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnInshopCheckout"/>

</androidx.constraintlayout.widget.ConstraintLayout>