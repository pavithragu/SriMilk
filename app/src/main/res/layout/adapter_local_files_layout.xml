<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivFile"
        android:layout_width="@dimen/C50dp"
        android:layout_height="@dimen/C40dp"
        android:padding="@dimen/C1dp"
        android:src="@drawable/profile_img"></ImageView>

    <ImageView
        android:id="@+id/ivDel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ivFile"
        android:layout_gravity="end"
        android:padding="@dimen/C3dp"

        android:src="@drawable/delete_cart"></ImageView>


</LinearLayout>