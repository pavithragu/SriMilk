<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activity_Hap.Permission_Request"
        tools:ignore="MissingConstraints">


        <include layout="@layout/custom_toolbar_help"></include>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:padding="@dimen/C8dp">

                    <TextView
                        android:textStyle="bold"
                        android:text="Permission Request"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_yellow"
                        android:gravity="center"
                        android:padding="@dimen/C10dp"
                        android:textAllCaps="true"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/C14dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/C10dp"
                            android:layout_marginLeft="@dimen/C10dp"
                            android:layout_marginRight="@dimen/C10dp"
                            android:paddingTop="@dimen/C10dp"
                            android:text="Date of Permission"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            />

                        <EditText
                            android:id="@+id/permission_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/C10dp"
                            android:layout_marginLeft="@dimen/C10dp"
                            android:layout_marginRight="@dimen/C10dp"
                            android:background="@drawable/textbox_bg"
                            android:clickable="false"
                            android:elevation="5dp"
                            android:padding="@dimen/C10dp"
                            android:focusable="false"
                            android:hint="Select the Date"
                            android:textSize="@dimen/C13dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/C10dp"
                            android:layout_marginLeft="@dimen/C10dp"
                            android:layout_marginRight="@dimen/C10dp"
                            android:paddingTop="@dimen/C10dp"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:text="Select the Hours" />

                        <TextView
                            android:id="@+id/select_hours"
                            android:elevation="5dp"
                            android:layout_marginBottom="@dimen/C10dp"
                            android:layout_marginLeft="@dimen/C10dp"
                            android:layout_marginRight="@dimen/C10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/textbox_bg"
                            android:hint="Select Hours"
                            android:padding="@dimen/C8dp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/C10dp"
                            android:layout_marginLeft="@dimen/C10dp"
                            android:layout_marginRight="@dimen/C10dp"
                            android:paddingTop="@dimen/C10dp"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:text="Shift Time" />

                        <TextView
                            android:id="@+id/shift_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/textbox_bg"
                            android:hint="@string/shit_type"
                            android:elevation="5dp"
                            android:layout_marginBottom="@dimen/C10dp"
                            android:layout_marginLeft="@dimen/C10dp"
                            android:layout_marginRight="@dimen/C10dp"
                            android:padding="@dimen/C8dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/C10dp"
                        android:layout_marginLeft="@dimen/C10dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/C10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="From Time" />

                            <EditText
                                android:id="@+id/from_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/C1dp"
                                android:background="@drawable/textbox_bg"
                                android:clickable="false"
                                android:elevation="@dimen/C5dp"
                                android:focusable="false"
                                android:hint="From Time"
                                android:inputType="time"
                                android:padding="@dimen/C8dp"
                                android:textSize="@dimen/C13dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/C10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="To Time" />



                            <EditText
                                android:id="@+id/to_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/disable_text_box"
                                android:clickable="false"
                                android:elevation="@dimen/C5dp"
                                android:focusable="false"
                                android:hint="To Time"
                                android:inputType="time"
                                android:layout_margin="@dimen/C1dp"
                                android:padding="@dimen/C8dp"                                     android:textSize="@dimen/C13dp" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/C5dp"
                        android:layout_marginLeft="@dimen/C10dp"
                        android:layout_marginRight="@dimen/C10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Note:- kindly use 24 hour time format"
                            android:textSize="10sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/C10dp"
                        android:layout_marginLeft="@dimen/C5dp"
                        android:layout_marginRight="@dimen/C5dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="72dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:elevation="5dp"
                            app:cardCornerRadius="10dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">


                                <EditText
                                    android:id="@+id/hrsAvail"
                                    android:layout_width="match_parent"
                                    android:layout_height="38dp"
                                    android:layout_alignParentBottom="true"
                                    android:background="@drawable/textbox_bg"
                                    android:clickable="false"
                                    android:elevation="@dimen/C5dp"
                                    android:focusable="false"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:text=""
                                    android:textColor="@color/color_red"
                                    android:textSize="@dimen/C14dp"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginBottom="40dp"
                                    android:background="@drawable/button_yellow" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="4dp"
                                    android:text="Available"
                                    android:textColor="#ffff"
                                    android:textSize="@dimen/C13dp"
                                    android:textStyle="bold" />

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="72dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:elevation="5dp"
                            app:cardCornerRadius="10dp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">


                                <EditText
                                    android:id="@+id/hrsTkn"
                                    android:layout_width="match_parent"
                                    android:layout_height="38dp"
                                    android:layout_alignParentBottom="true"
                                    android:background="@drawable/textbox_bg"
                                    android:clickable="false"
                                    android:elevation="@dimen/C5dp"
                                    android:focusable="false"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:text=""
                                    android:textColor="@color/color_red"
                                    android:textSize="@dimen/C14dp"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginBottom="40dp"
                                    android:background="@drawable/button_yellow" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="4dp"
                                    android:text="Taken Hrs"
                                    android:textColor="#ffff"
                                    android:textSize="@dimen/C13dp"
                                    android:textStyle="bold" />

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="72dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:elevation="5dp"
                            app:cardCornerRadius="10dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">


                                <EditText
                                    android:id="@+id/hrsCurr"
                                    android:layout_width="match_parent"
                                    android:layout_height="38dp"
                                    android:layout_alignParentBottom="true"
                                    android:background="@drawable/textbox_bg"
                                    android:clickable="false"
                                    android:elevation="@dimen/C5dp"
                                    android:focusable="false"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:text=""
                                    android:textColor="@color/color_red"
                                    android:textSize="@dimen/C14dp"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginBottom="40dp"
                                    android:background="@drawable/button_yellow" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="4dp"
                                    android:text="Curr.Taken"
                                    android:textColor="#ffff"
                                    android:textSize="@dimen/C13dp"
                                    android:textStyle="bold" />

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/C5dp"
                        android:layout_marginLeft="@dimen/C5dp"
                        android:layout_marginRight="@dimen/C5dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextStyle"
                            android:text="Reason" />

                        <EditText
                            android:id="@+id/reason_permission"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/C100dp"
                            android:layout_margin="@dimen/C10dp"
                            android:background="@drawable/textbox_bg"
                            android:elevation="@dimen/C5dp"
                            android:gravity="start"
                            android:hint="Reason"
                            android:padding="@dimen/C10dp"
                            android:textSize="@dimen/C13dp" />
                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#99ECEAEA"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imag_back"
                android:layout_margin="@dimen/C5dp"
                android:paddingLeft="@dimen/C8dp"
                android:paddingRight="@dimen/C8dp"
                android:src="@drawable/back_arrow"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/C10dp"
                android:layout_margin="@dimen/C5dp"
                android:id="@+id/btn_submit"
                android:layout_weight="1"
                android:background="@drawable/button_blueg"
                android:layout_marginLeft="@dimen/C15dp"
                android:layout_marginRight="@dimen/C15dp"
                android:textColor="@color/white"
                android:text="SUBMIT" />
        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>


