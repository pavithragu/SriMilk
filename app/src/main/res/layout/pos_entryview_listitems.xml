<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/C5dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    android:background="@color/white"
    app:layout_constraintCircleRadius="@dimen/C10dp"
    android:layout_marginStart="@dimen/C2dp"
    android:layout_marginEnd="@dimen/C2dp"
    app:cardCornerRadius="@dimen/C5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/C45dp"
        android:weightSum="2"
        android:layout_marginStart="@dimen/C2dp"
        android:paddingTop="@dimen/C2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtProd"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Curd"
            android:paddingStart="@dimen/C7dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/txtValue"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:paddingStart="40dp"
            android:layout_gravity="center"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="13sp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/C1dp"
        android:background="@color/grey_100"/>

</LinearLayout>