<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/C10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <TextView
        android:id="@+id/tvInshopCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sakthi Garam Masala 250 gm"
        android:textSize="@dimen/C16dp"
        android:layout_marginStart="@dimen/C10dp"
        android:layout_marginTop="@dimen/C5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/C10dp"
        app:layout_constraintTop_toBottomOf="@id/tvInshopCategory">

        <LinearLayout
            android:id="@+id/inshopImg"
            android:layout_width="@dimen/C80dp"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/C20dp"
            android:layout_marginStart="@dimen/C3dp"
            android:background="@drawable/button_inshopgrey"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/C30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_image_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/inshopImg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/isCatDropdown"
                    android:layout_width="@dimen/C90dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="@dimen/C15dp"
                    android:background="@drawable/inshop_cat_dropdownbg"
                    android:drawableRight="@drawable/dropdown"
                    android:gravity="center"
                    android:text="PACK"
                    android:textSize="@dimen/C15dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/C30dp"
                    android:layout_marginTop="-8dp"
                    android:layout_toRightOf="@id/isCatDropdown">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Qty: "
                        android:textSize="@dimen/C13dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" -  "
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/qtyCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/inshop_cat_dropdownbg"
                        android:paddingStart="@dimen/C20dp"
                        android:paddingTop="@dimen/C3dp"
                        android:paddingEnd="@dimen/C20dp"
                        android:paddingBottom="@dimen/C3dp"
                        android:text="0"
                        android:textSize="@dimen/C14dp" />

                    <TextView
                        android:id="@+id/plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/C3dp"
                        android:text="  + "
                        android:textSize="20dp" />
                </LinearLayout>

                <!--  <androidx.cardview.widget.CardView
                    android:id="@+id/galleryCard"
                    android:layout_width="@dimen/C20dp"
                    android:layout_height="@dimen/C20dp"
                    android:layout_marginStart="@dimen/C20dp"
                    app:cardBackgroundColor="#616161"
                    app:cardCornerRadius="25dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_keyboard_arrow_down_24" />

                </androidx.cardview.widget.CardView>-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/C15dp"
                android:layout_marginTop="@dimen/C10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Free" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/C15dp"
                    android:text="Sakthi Garam Masala 50 gm"
                    android:textSize="@dimen/C13dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_weight="1"
                    android:textColor="@color/color_red"
                    android:textAlignment="textEnd"
                    android:layout_marginEnd="@dimen/C20dp"
                    android:textSize="@dimen/C13dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/C10dp"
                android:layout_marginBottom="@dimen/C5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹"
                    android:textSize="@dimen/C15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="0.00"
                    android:textSize="@dimen/C15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="x"
                    android:textSize="@dimen/C15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="("
                    android:textSize="@dimen/C15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="1"
                    android:textSize="@dimen/C15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="x"
                    android:textSize="@dimen/C15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="0"
                    android:textSize="@dimen/C15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text=")"
                    android:textSize="@dimen/C15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="="
                    android:textSize="@dimen/C15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="0.0"
                    android:textSize="@dimen/C15dp" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/C1dp"
        android:background="#eeeeee"
        app:layout_constraintTop_toBottomOf="@id/layout"/>

</androidx.constraintlayout.widget.ConstraintLayout>